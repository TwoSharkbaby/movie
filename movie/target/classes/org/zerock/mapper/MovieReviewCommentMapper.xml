<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.MovieReviewCommentMapper">

	<select id="getList"
		resultType="org.zerock.domain.MovieReviewCommentVO">
		<![CDATA[
		SELECT * FROM movie_review_comment WHERE mov_rev_com_num > 0
		]]>
	</select>

	<select id="read"
		resultType="org.zerock.domain.MovieReviewCommentVO">
		<![CDATA[
		SELECT * FROM movie_review_comment WHERE mov_rev_com_num = #{mov_rev_com_num}
		]]>
	</select>

	<insert id="insert" keyProperty="mov_rev_com_num"
		useGeneratedKeys="true">
		<![CDATA[
		INSERT INTO movie_review_comment(mov_rev_com_content, mov_rev_com_regdate, mov_rev_com_good, mov_rev_com_bad, mem_num, mov_rev_num) 
		VALUES (#{mov_rev_com_content},now(),#{mov_rev_com_good},#{mov_rev_com_bad},#{mem_num},#{mov_rev_num})
		]]>
	</insert>

	<delete id="delete">
		<![CDATA[
		DELETE FROM movie_review_comment WHERE mov_rev_com_num=#{mov_rev_com_num}
		]]>
	</delete>

	<select id="getCommentList"
		resultType="org.zerock.domain.MovieReviewCommentVO">
		<![CDATA[
		SELECT * FROM movie_review_comment WHERE mov_rev_num = #{mov_rev_num}
		]]>
	</select>

	<update id="goodUpdate">
		<![CDATA[
		UPDATE movie_review_comment set mov_rev_com_good = (mov_rev_com_good)+1 where mov_rev_com_num=#{mov_rev_com_num}
		]]>
	</update>

	<update id="goodDowndate">
		<![CDATA[
		UPDATE movie_review_comment set mov_rev_com_good = (mov_rev_com_good)-1 where mov_rev_com_num=#{mov_rev_com_num}
		]]>
	</update>

	<update id="badUpdate">
		<![CDATA[
		UPDATE movie_review_comment set mov_rev_com_bad = (mov_rev_com_bad)+1 where mov_rev_com_num=#{mov_rev_com_num}
		]]>
	</update>

	<update id="badDowndate">
		<![CDATA[
		UPDATE movie_review_comment set mov_rev_com_bad = (mov_rev_com_bad)-1 where mov_rev_com_num=#{mov_rev_com_num}
		]]>
	</update>

	<select id="checkChoice" resultType="org.zerock.domain.ChoiceVO">
		<![CDATA[
		SELECT mov_rev_com_good AS good, mov_rev_com_bad AS bad FROM movie_review_comment WHERE mov_rev_com_num = #{mov_rev_com_num}
		]]>
	</select>
	
	<select id="findByReviewComment" resultType="long">
		<![CDATA[
		SELECT mov_rev_com_num FROM movie_review_comment WHERE mov_rev_num = #{mov_rev_num}
		]]>
	</select>
	
	<delete id="deleteReviewComments">
		<![CDATA[
		DELETE FROM movie_review_comment WHERE mov_rev_num=#{mov_rev_num}
		]]>
	</delete>


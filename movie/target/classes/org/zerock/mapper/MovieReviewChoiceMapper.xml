<mapper namespace="org.zerock.mapper.MovieReviewChoiceMapper">

	<select id="getList" resultType="org.zerock.domain.MovieReviewChoiceVO">
		<![CDATA[
		SELECT * FROM movie_review_choice WHERE mov_rev_cho_num > 0
		]]>
	</select>

	<select id="read" resultType="org.zerock.domain.MovieReviewChoiceVO">
		<![CDATA[
		SELECT * FROM movie_review_choice WHERE mov_rev_cho_num = #{mov_rev_cho_num}
		]]>
	</select>

	<insert id="insert" keyProperty="mov_rev_cho_num" useGeneratedKeys="true">
		<![CDATA[
		INSERT INTO movie_review_choice(mov_rev_num, mem_num, mov_rev_cho_which) 
		VALUES (#{mov_rev_num},#{mem_num},#{mov_rev_cho_which})
		]]>
	</insert>

	<delete id="delete">
		<![CDATA[
		DELETE FROM movie_review_choice 
		WHERE mov_rev_num = #{mov_rev_num} AND mem_num = #{mem_num}
		]]>
	</delete>
	
	<select id="choiceRead" resultType="org.zerock.domain.MovieReviewChoiceVO">
		<![CDATA[
		SELECT * FROM movie_review_choice 
		WHERE mov_rev_num = #{mov_rev_num} AND mem_num = #{mem_num}
		]]>
	</select>

	<update id="update">
		<![CDATA[
		update movie_review_choice set mov_rev_cho_which =#{mov_rev_cho_which} where mov_rev_cho_num=#{mov_rev_cho_num}
		]]>
	</update> 
	
	<delete id="deleteReviewChoices">
		<![CDATA[
		DELETE FROM movie_review_choice 
		WHERE mov_rev_num = #{mov_rev_num}
		]]>
	</delete>


<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.MovieScoreMapper">

	<select id="getList" resultType="org.zerock.domain.MovieScoreVO">
		<![CDATA[
		SELECT * FROM movie_score WHERE mov_sco_num > 0
		]]>
	</select>

	<select id="read" resultType="org.zerock.domain.MovieScoreVO">
		<![CDATA[
		SELECT * FROM movie_score WHERE mov_sco_num = #{mov_sco_num}
		]]>
	</select>

	<insert id="insert">
		<![CDATA[
		INSERT INTO movie_score(mov_sco_point, mov_num, mov_rev_num) 
		VALUES (#{mov_sco_point},#{mov_num},#{mov_rev_num})
		]]>
	</insert>
	
	<update id="update">
		<![CDATA[
		update movie_score set mov_sco_point =#{mov_sco_point} 
		where mov_num=#{mov_num} AND mov_rev_num=#{mov_rev_num}
		]]>
	</update>

	<delete id="delete">
		<![CDATA[
		DELETE FROM movie_score WHERE mov_sco_num=#{mov_sco_num}
		]]>
	</delete>
	
	<select id="score" resultType="double">
		<![CDATA[
		SELECT AVG(mov_sco_point) FROM movie_score WHERE mov_num = #{mov_num}
		]]>
	</select>
	
	<select id="reviewRead" resultType="double">
		<![CDATA[
		SELECT mov_sco_point FROM movie_score WHERE mov_rev_num = #{mov_rev_num}
		]]>
	</select>
	
	<delete id="deleteScores">
		<![CDATA[
		DELETE FROM movie_score WHERE mov_rev_num=#{mov_rev_num}
		]]>
	</delete>


<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.MovieReviewMapper">

	<select id="getList"
		resultType="org.zerock.domain.MovieReviewVO">
		<![CDATA[
		SELECT * FROM movie_review WHERE mov_rev_num > 0
		]]>
	</select>

	<select id="read" resultType="org.zerock.domain.MovieReviewVO">
		<![CDATA[
		SELECT * FROM movie_review WHERE mov_rev_num = #{mov_rev_num}
		]]>
	</select>

	<insert id="insert" keyProperty="mov_rev_num"
		useGeneratedKeys="true">
		<![CDATA[
		INSERT INTO movie_review(mov_rev_title, mov_rev_content, mov_rev_regdate, mov_rev_good, mov_rev_bad, mov_num, mem_num) 
		VALUES (#{mov_rev_title}, #{mov_rev_content}, now(), 0, 0, #{mov_num}, #{mem_num})
		]]>
	</insert>
	
	<update id="update">
		<![CDATA[
		UPDATE movie_review set mov_rev_title = #{mov_rev_title}, mov_rev_content = #{mov_rev_content}
		where mov_rev_num=#{mov_rev_num}
		]]>
	</update>

	<delete id="delete">
		<![CDATA[
		DELETE FROM movie_review WHERE mov_rev_num=#{mov_rev_num}
		]]>
	</delete>

	<select id="movieReviewRead"
		resultType="org.zerock.domain.MovieReviewVO">
		<![CDATA[
		SELECT r.*, s.mov_sco_point FROM movie.movie_review r JOIN movie_score s ON r.mov_rev_num = s.mov_rev_num WHERE r.mov_num = #{r.mov_numm}
		]]>
	</select>

	<update id="goodUpdate">
		<![CDATA[
		UPDATE movie_review set mov_rev_good = (mov_rev_good)+1 where mov_rev_num=#{mov_rev_num}
		]]>
	</update>

	<update id="goodDowndate">
		<![CDATA[
		UPDATE movie_review set mov_rev_good = (mov_rev_good)-1 where mov_rev_num=#{mov_rev_num}
		]]>
	</update>

	<update id="badUpdate">
		<![CDATA[
		UPDATE movie_review set mov_rev_bad = (mov_rev_bad)+1 where mov_rev_num=#{mov_rev_num}
		]]>
	</update>

	<update id="badDowndate">
		<![CDATA[
		UPDATE movie_review set mov_rev_bad = (mov_rev_bad)-1 where mov_rev_num=#{mov_rev_num}
		]]>
	</update>

	<select id="checkChoice"
		resultType="org.zerock.domain.ChoiceVO">
		<![CDATA[
		SELECT mov_rev_good AS good, mov_rev_bad AS bad FROM movie_review WHERE mov_rev_num = #{mov_rev_num}
		]]>
	</select>
	
	<select id="findByReview" resultType="long">
		<![CDATA[
		SELECT mov_rev_num FROM movie_review WHERE mov_num = #{mov_num}
		]]>
	</select>
	
	<delete id="deleteReviews">
		<![CDATA[
		DELETE FROM movie_review WHERE mov_num=#{mov_num}
		]]>
	</delete>
	
	


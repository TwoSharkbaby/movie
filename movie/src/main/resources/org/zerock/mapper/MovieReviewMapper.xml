<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.MovieReviewMapper">

	<select id="getList" resultType="org.zerock.domain.MovieReviewVO">
		<![CDATA[
		SELECT * FROM movie_review WHERE mov_rev_num > 0
		]]>
	</select>

	<select id="read" resultType="org.zerock.domain.MovieReviewVO">
		<![CDATA[
		SELECT * FROM movie_review WHERE mov_rev_num = #{mov_rev_num}
		]]>
	</select>

	<insert id="insert" keyProperty="mov_rev_num" useGeneratedKeys="true">
		<![CDATA[
		INSERT INTO movie_review(mov_rev_title, mov_rev_content, mov_rev_regdate, mov_rev_good, mov_rev_bad, mov_num, mem_num) 
		VALUES (#{mov_rev_title},#{mov_rev_content},#{mov_rev_regdate},#{mov_rev_good},#{mov_rev_bad},#{mov_num},#{mem_num})
		]]>
	</insert>

	<delete id="delete">
		<![CDATA[
		DELETE FROM movie_review WHERE mov_rev_num=#{mov_rev_num}
		]]>
	</delete>

